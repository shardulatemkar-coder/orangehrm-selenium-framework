<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <!-- Console Logging -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level [%c{1}] - %msg%n"/>
        </Console>

        <!-- File Logging -->
        <File name="FileLogger" fileName="logs/automation.log" append="true">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%c] - %msg%n</pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>
        <!-- Application Logging -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
